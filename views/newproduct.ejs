<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/formsproduct.css">
    <title>Create product</title>
</head>
<body>
    <!-- INICIO HEADER -->
    <%- include('./partials/nav') %>
    <!-- INICIO MAIN -->
    <main class="newProduct">
        <div class="principalForm">
        <fieldset>
        <form action="/products" method="POST" enctype="multipart/form-data">
            <p class="formTitle">
                ¡INGRESA UN NUEVO PRODUCTO!
            </p>
            <div class="flexForm">
                <!-- <p>
                    <label for="id">ID del producto:</label>
                </p>
                <input type="text" id="id" name="id" required autocomplete="on"> -->
                
            <p>
                <label for="name">Nombre del producto:</label>
            </p>
            <input type="text" id="titulo" name="name"  autocomplete="on">
            <p>
                <label for="description">Descripción:</label>
            </p>
            <input type="text" id="descripcion" name="description"  autocomplete="on">

            <p>
            <label for="img">Foto del producto:</label>
            </p>
            <input type="file" id="img" name="img"  autocomplete="on" accept=".jpg, .png, .jpeg">

            <p>
                <label for="category">Tipo de producto:</label>
                </p>
                <select name="category_id" id="category_id" class="control" >
                    <option value="" disabled selected hidden>Selecciona</option>
                    <% categories.forEach(category => {%> 
                    <option value="<%=category.id%>"><%=category.name%></option>
                    <% }) %> 
            </select>
            <div class="cantidad">
            <p>
                <label for="stock">Cantidad disponible:</label>
                </p>
                <input type="number" id="stock" name="stock" required autocomplete="on" inputmode="numeric">
            </div>      
                <div class="priceinfo">
            <p>
            <label class="precio" for="price">Precio COP:</label>
            </p>
            <input  type="number" id="precio" name="price" required autocomplete="on" inputmode="numeric">
            </div>

                <div class="buttons">
                <p class="formTitle2">
                    
                <a class="loginBtn"><input class="loginBtn" type="reset" value="Limpiar"></a>
                </p>
                
                <p class="formTitle2">
                <a class="loginBtn" href="/products"><input class="loginBtn" type="submit" href="/products" value="Crear"></a>
                </p>
            </div>
                           
        
        </form>
          
        </fieldset>
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>