<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/formsproduct.css">
    <title>Modify product</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <!-- INICIO MAIN -->
    <main>
        <div class="principalForm">
        <fieldset>
        <form action="/products/modify/<%= Product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <p class="formTitle">
                ¡MODIFICA UN PRODUCTO!
            </p>
            <div class="flexForm">

                <p>
                    <label for="categoria"> <%=Product.id%> / <%=Product.name%></label>
                    </p>
                    <!-- <input type="search" id="descripcion" name="descripcion" placeholder="Ingresa ID / Nombre">                    -->
<!--                     <p>
                        <label for="nombre">Nuevo ID</label>
                    </p>
                    <input type="text" id="id" name="id" placeholder="<%=Product.id%>">
             -->
             <div class="card">
                <p class="profilePic"> <img class="profilePic" src="/images/<%= Product.img %>" alt="profilePhoto"> </p>
        </div>
        <p>
            <label for="img">Nueva foto de producto:</label>
            </p>
            <input type="file" id="foto" name="img" accept=".jpg, .png, .jpeg" value="<%=Product.img%>">
                    <p>
                <label for="name">Nuevo nombre</label>
            </p>
            <input type="text" id="titulo" name="name" value="<%=Product.name%>">
            <p>
                <label for="description">Nueva descripción:</label>
            </p>
            <input type="text" id="description" name="description" placeholder="<%=Product.description%>" value="<%=Product.description%>">

            

            <p>
                <label for="category">Tipo de producto:</label>
                </p>
                <select name="category_id" id="category_id" class="control" >
                    <option value="" disabled selected hidden>Selecciona</option>
                    <% categories.forEach(category => {%> 
                    <option value="<%=category.id%>"><%=category.name%></option>
                    <% }) %> 
            </select>
            <div class="cantidad">
                <p>
                    <label for="stock">Cantidad disponible:</label>
                    </p>
                    <input type="number" id="stock" name="stock" required autocomplete="on" inputmode="numeric">
                </div> 
            <div class="priceinfo">
            <p>
                <label class="precio" for="price">Precio COP:</label>
                </p>
                <input  type="number" id="precio" name="price"  inputmode="numeric" placeholder="<%=Product.price%>" value="<%=Product.price%>">
                </div>
            <div class="buttons">
                <p class="formTitle2">
                    
                <a class="loginBtn"><input class="loginBtn" type="reset" value="Limpiar"></a>
                </p>
                
                <p class="formTitle2">
                <a class="loginBtn"><button type="submit" class="loginBtn">Modificar</button></a>
                <!-- <a class="loginBtn" href="/products/<%= Product.id %>"><input class="loginBtn" type="submit" href="/products/<%= Product.id %>" value="Modificar"></a> -->
                </p>
            </div>                  
        </form>
        <div class="buttons">
            <p><form method="POST" action="/products/delete/<%= Product.id %>?_method=DELETE" >
                <!--  <p class="formTitle2">
                     <a class="loginBtn" href="/product/<%= Product.id %>"><input class="loginBtn" type="submit" href="/product/<%= Product.id %>" value="Eliminar"></a>
                     </p> -->
                     <a class="loginBtn" ><button class="loginBtn" type="submit" >Eliminar</button></a>
             </form>
            </p>
        </div>
        </fieldset>
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>